---
import '../../react-app/index.css'
import './styles/code-of-conduct.css'
import Nav from '../../react-app/Nav/components/Nav'
import Footer from '../Footer.astro'

const data = [
    {
        heading:"1. Respect and Inclusion",
        data:"We value a welcoming, respectful environment. All contributors, users, and visitors are expected to treat others with dignity and kindness."
    },
    {
        heading:"2. No Abuse or Harassment",
        data:"Harassment, hate speech, or any kind of personal attack will not be tolerated. Violators may be removed and blocked from the project."
    },
    {
        heading:"3. Responsible Use",
        data:"Do not abuse the service, spam endpoints, or attempt to circumvent rate limits. Help us keep the API clean and fair for everyone."
    },
    {
        heading:"4. Open Source Collaboration",
        data:"Contributions are welcome! Be constructive in pull requests and respectful in discussions. We believe in building with integrity."
    },
    {
        heading:"5. Reporting Issues",
        data:"To report violations or behavior that goes against this code, email us at <strong>admin@ipwho.org</strong>. We take concerns seriously and act quickly."
    }
]
---

<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Free IP Geolocation API — IPWho.org</title>
    <meta name="description" content="Free and fast IP geolocation API with JSON output. Get country, city, ASN, currency, and more. No API key, no Sign-up needed." />
    <!-- <meta name="keywords" content="IP geolocation API, IP lookup, IPWho, free IP API, IP to location, geolocation API, IP address lookup" /> -->
    <meta name="author" content="Gyanaa Vaibhav" />
    <meta name="robots" content="index, follow" />
    <link rel="canonical" href="https://ipwho.org/" />

    <!-- Open Graph -->
    <meta property="og:title" content="IPWho.org — Free IP Geolocation API" />
    <meta property="og:description" content="Get detailed IP data in JSON format: country, region, city, ASN, and currency. Fast & free for developers." />
    <meta property="og:image" content="https://ipwho.org/image.png" />
    <meta property="og:url" content="https://ipwho.org/" />
    <meta property="og:type" content="website" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="IPWho.org — Free IP Geolocation API" />
    <meta name="twitter:description" content="Accurate, fast IP lookup service for developers. No key needed." />
    <meta name="twitter:image" content="https://ipwho.org/image.png" />

    <!-- Favicon -->
    <link rel="icon" href="/favicon.svg" />
    <link rel="apple-touch-icon" href="/favicon.svg" />

    <script type="application/ld+json">
		{
		  "@context": "https://schema.org",
		  "@type": "Organization",
		  "name": "IPWho.org",
		  "url": "https://ipwho.org",
		  "logo": "https://ipwho.org/image.png",
		  "description": "Free and fast IP geolocation API for developers. Get location, ASN, currency and more.",
		  "sameAs": [
			"https://github.com/gyanaavaibhav/ipwho",
			"https://twitter.com/ipwho"
		  ]
		}
		</script>

</head>
    <body>
    <Nav client:load/>
        <main class="legal">
            <h1>
                Code of Conduct
            </h1>

            <p>
                <strong>Effective Date:</strong> May 15, 2025
            </p>

            {data.map(({heading,data})=>{
                return(
                        <>
                            <h2>{heading}</h2>
                            <p set:html={data}></p>
                        </>
                )
            })}

            <div style={{ marginTop: '3rem', fontSize: '0.9rem' }}>
                Thank you for helping make ipwho.org a respectful space.
            </div>
        </main>
    <Footer />
    </body>
</html>