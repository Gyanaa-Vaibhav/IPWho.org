---
import '../../react-app/index.css'
import './styles/code-of-conduct.css'
import Nav from '../../react-app/Nav/components/Nav'
import Footer from "../Footer.astro";

const data = [
    {
        heading: "1. Use of the Service",
        data: 'By using <strong>ipwho.org</strong>, you agree to comply with these Terms. The service is provided "as-is" and may change without notice.'
    },
    {
        heading: "2. Free Tier Limits",
        data: 'Free usage is capped at 100,000 requests per month. Abuse of the service or attempts to bypass rate limits may result in access revocation.'
    },
    {
        heading: "3. Data Accuracy",
        data: 'We strive to provide accurate geolocation data but do not guarantee 100% precision. All data is provided without warranty.'
    },
    {
        heading: "4. Intellectual Property",
        data: 'All code, branding, and original content are the intellectual property of ipwho.org unless otherwise noted. Respect all licenses if using our open-source parts.'
    },
    {
        heading: "5. Termination",
        data: 'We reserve the right to suspend or terminate access to users who violate these Terms or abuse the service.'
    },
    {
        heading: "6. Changes",
        data: 'These Terms may be updated. Continued use of the service implies acceptance of the latest version.'
    }
]

---

<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Free IP Geolocation API — IPWho.org</title>
    <meta name="description" content="Free and fast IP geolocation API with JSON output. Get country, city, ASN, currency, and more. No API key, no Sign-up needed." />
    <!-- <meta name="keywords" content="IP geolocation API, IP lookup, IPWho, free IP API, IP to location, geolocation API, IP address lookup" /> -->
    <meta name="author" content="Gyanaa Vaibhav" />
    <meta name="robots" content="index, follow" />
    <link rel="canonical" href="https://ipwho.org/" />

    <!-- Open Graph -->
    <meta property="og:title" content="IPWho.org — Free IP Geolocation API" />
    <meta property="og:description" content="Get detailed IP data in JSON format: country, region, city, ASN, and currency. Fast & free for developers." />
    <meta property="og:image" content="https://ipwho.org/image.png" />
    <meta property="og:url" content="https://ipwho.org/" />
    <meta property="og:type" content="website" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="IPWho.org — Free IP Geolocation API" />
    <meta name="twitter:description" content="Accurate, fast IP lookup service for developers. No key needed." />
    <meta name="twitter:image" content="https://ipwho.org/image.png" />

    <!-- Favicon -->
    <link rel="icon" href="/favicon.svg" />
    <link rel="apple-touch-icon" href="/favicon.svg" />

    <script type="application/ld+json">
		{
		  "@context": "https://schema.org",
		  "@type": "Organization",
		  "name": "IPWho.org",
		  "url": "https://ipwho.org",
		  "logo": "https://ipwho.org/image.png",
		  "description": "Free and fast IP geolocation API for developers. Get location, ASN, currency and more.",
		  "sameAs": [
			"https://github.com/gyanaavaibhav/ipwho",
			"https://twitter.com/ipwho"
		  ]
		}
		</script>

</head>
    <body>
    <Nav client:load/>
        <main class="legal">
            <h1>
                Terms & Conditions
            </h1>

            <p>
                <strong>Effective Date:</strong> May 15, 2025
            </p>

            {data.map(({heading,data})=>{
                return(
                        <>
                            <h2>{heading}</h2>
                            <p set:html={data}></p>
                        </>
                )
            })}

            <div style={{ marginTop: '3rem', fontSize: '0.9rem' }}>
                Questions? Contact us at <strong>admin@ipwho.org</strong>.
            </div>
        </main>
    <Footer />
    </body>
</html>