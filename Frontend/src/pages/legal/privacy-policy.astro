---
import '../../react-app/index.css'
import './styles/code-of-conduct.css'
import Nav from '../../react-app/Nav/components/Nav'
import Footer from "../../layouts/Footer.astro";
import Layout from '../../layouts/Layout.astro'
const data = [
    {
        heading: "1. What We Collect",
        data: `
      <ul>
        <li>IP addresses (for geolocation)</li>
        <li>Geographic metadata (country, region, city)</li>
        <li>Request details (timestamp, headers, errors)</li>
      </ul>
    `
    },
    {
        heading: "2. How We Use the Data",
        data: `
      <ul>
        <li>To provide accurate geolocation responses</li>
        <li>To monitor performance and detect abuse</li>
        <li>To ensure fair usage for all users</li>
      </ul>
    `
    },
    {
        heading: "3. Data Retention",
        data: "We keep anonymized logs temporarily (7â€“30 days) for monitoring. We do not permanently store or link data to individuals."
    },
    {
        heading: "4. Third-Party Services",
        data: "We do not sell or share your data. We may use infrastructure services (e.g. hosting, analytics) that handle anonymized technical info only."
    },
    {
        heading: "5. Your Rights",
        data: "You may contact us at <strong>admin@ipwho.org</strong> to request data clarification or deletion."
    },
    {
        heading: "6. Changes to This Policy",
        data: "We may revise this privacy policy occasionally. We will post updates directly on this page."
    }
]

---

<Layout title="Privacy Policy">
    <Nav client:load/>
        <main class="legal">
            <h1>
                Privacy Policy
            </h1>

            <p>
                <strong>Effective Date:</strong> May 15, 2025
            </p>

            {data.map(({heading,data})=>{
                if(data.trim().startsWith("<ul>")){
                    return (
                        <>
                            <h2>{heading}</h2>
                            <div set:html={data}></div>
                        </>
                    )
                }
                return(
                        <>
                            <h2>{heading}</h2>
                            <p set:html={data}></p>
                        </>
                )
            })}

            <div style={{ marginTop: '3rem', fontSize: '0.9rem' }}>
                Questions? Contact us at <strong>admin@ipwho.org</strong>.
            </div>
        </main>
    <Footer />
</Layout>